<form accept-charset="UTF-8" action="/venues?use_as_venue_for_event={{event_uuid}}" data-rerun_uuid="{{event_uuid}}" class="simple_form" id="new_venue" data-remote="true" method="post" novalidate="novalidate"><div style="margin:0;padding:0;display:inline">
  <input name="utf8" type="hidden" value="&#x2713;" />
  <input name="authenticity_token" type="hidden" value="{{auth_token}}" /></div>
  
  <div class="form-group string required venue_name">
    <label class="string required control-label" for="venue_name">
      <abbr title="required">*</abbr>Name
    </label>
    <div class="controls">
      <input class="string required form-control" id="venue_name" name="venue[name]" type="text">
    </div>
  </div>

  <div class="form-group string required venue_address">
    <label class="string required control-label" for="venue_address">
      <abbr title="required">*</abbr>Address
    </label>
    <div class="controls">
      <input class="string required form-control" id="venue_address" name="venue[address]" type="text">
      <p class="help-block">full address, including city, state<br /> (e.g. 123 Ward St Berkeley, CA)</p>
    </div>
  </div>

  <div>
    <button type="submit" class="btn btn-primary btn-sm editable-submit"><i class="glyphicon glyphicon-ok"></i></button>
    <button type="button" class="btn btn-default btn-sm editable-cancel"><i class="glyphicon glyphicon-remove"></i></button>
  </div>
</form>
