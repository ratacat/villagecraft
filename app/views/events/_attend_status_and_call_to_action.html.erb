<% event ||= @event %>

<% if user_signed_in? %>
  <% if event.occurred? %>
    Event occurred 
    <span id="confirmation_status"><% if current_user.attends.exists?(event) %>
      <% if current_user.confirmed_attend_at_event?(event) %>
        (your attendance confirmed)
      <% else %>
        <br/><button type="button" class="btn-primary" data-toggle="modal" data-target="#confirm_attend_modal">Confirm your Attendance</button>
      <% end %>
    <% end %>
    </span>
  <% else %>
    <% if current_user.attends.exists?(event) %>
      <i class="icon-check icon-large text-success"> </i> You plan to attend (<%= link_to 'cancel', cancel_attend_path, :method => :post %>)
    <% else %>
      <h3>Want to Attend?</h3>
      <%= form_for(:attendance, :url => attend_path(event), :html => {:class => "form-inline"}) do |f| %>
          <%= f.text_field :message, placeholder: "Tell host a little about why you'd like to attend.", class: 'span4' %>
          <%= f.submit :Submit, :class => "btn-primary" %>
      <% end %>
    <% end %>
  <% end %>
<% else %>
  <% if event.occurred? %>
    Event occurred
  <% else %>
    <button data-auto_attend_event data-toggle_modal_registration>Sign up to attend</button>
  <% end %>
<% end %>

<%= render :partial => 'confirm_modal' %>