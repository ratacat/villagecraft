<% event ||= @event %>
<h1><%= event.title %></h1>
<div class="media">
  <div class="pull-left">
    <img src="<%= @event.img_src(:medium) %>" class="img-rounded media-object">    
  </div>
  <div class="media-body">
    <div class="rerun_times">
      <%= render 'reruns/meeting_times_list', :rerun => event %>
    </div>
    <% if admin_session? %>
      <%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-small btn-warning' %>        
    <% end %>
  </div>
</div>

