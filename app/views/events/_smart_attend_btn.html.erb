<% if event.slots_left > 0 %>
  <% if user_signed_in? %>
    <% unless current_user.attending_event?(event) %>
      <%= link_to attend_path(event), :class => "btn btn-success btn-large attend_event", :method => :post do -%>
        <i class="icon-check icon-large"></i> Attend
      <% end -%>
    <% end %>
  <% else %>
    <button data-auto_attend_event="<%= event.uuid %>" data-toggle_modal_registration class="btn btn-success btn-large"><i class="icon-check icon-large text-success"></i>Attend</button>
  <% end %>
<% end %>
