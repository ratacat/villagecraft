<% event ||= @event 
   show_image ||= false
%>
<table class="table borderless when_where_host_table">
  <thead>
    <tr>
      <td>
        <div class="blocky_spns"><%= render :partial => 'events/times', :locals => {:event => event, :short_date => true, :no_tz => true} %><span class="muted" data-livestamp="<%= event.start_time %>"></span></div>
        <p><%= render :partial => 'events/inline_attend_state', :locals => {:event => event} %></p>
      </td>
      <td><%= event.venue.blank? ? 'TBD' : neighborhood_or_city_n_state(event.venue.location, :show_popover_map => false) %></td>
      <td><div class="blocky_spns"><span><%= event.attendances.count %> / <%= event.max_attendees %></span><span>going</span></div></td>
      <td>
        <% if event.host %>
          <%= rich_user_thumbnail(event.host, :linked => false, :thumb_size => :small, :thumbnail_classes => 'thumbnail bottom-caption') %>
        <% end %>
      </td>
    </tr>
    <% if show_image %>
      <tr>
        <td colspan="4" class="image"><img src="<%= event.img_src(:larger) %>" class="img-rounded"></td>
      </tr>
    <% end %>
  </thead>
</table>
