<%
  rerun ||= @rerun
%>
<%= iconic_link_to("Manage attendees", manage_event_path(rerun), :icon => 'group', :class => 'btn btn-small') %>
<% if rerun.locked? %>
  <i class="icon-lock" title="locked because there are <%= pluralize(rerun.attendances.count, "attendee") %>"></i>
<% else %>
  <%= iconic_link_to('', rerun, icon: 'remove', class: 'btn btn-small delete_rerun', title: 'delete', method: :delete, confirm: "Really delete?", remote: true, disable_with: "...") %>
<% end %>
