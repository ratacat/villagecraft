<%= simple_form_for :comment, url: comments_path do |f| %>
  <%= f.hidden_field :commentable_type, value: @commentable.class.to_s %>
  <%= f.hidden_field :commentable_uuid, value: @commentable.uuid %>
  <%= f.input :body, label: false, placeholder: "Add your comment" %>
  <%= f.button :submit, "Create comment", class: "btn btn-primary" %>
<% end %>


