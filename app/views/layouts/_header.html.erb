<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
 
      <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
 
      <!-- Be sure to leave the brand out there if you want it shown -->
      <a class="brand" href="/">Villagecraft</a>
 
      <!-- Everything you want hidden at 940px or less, place within here -->
      <div class="nav-collapse collapse">
      	<ul class="nav">
      	</ul>
      	<ul class="nav pull-right">
          <% if not user_signed_in? %>
            <li><%= link_to "Sign Up", '#', :'data-toggle_modal_registration' => true %></li>
            <li><%= link_to "Log In", new_user_session_path %></li>
          <% else %>
            <li><%= link_to "My Events", my_events_path %></li>
            <% if @notifications %>
              <li class="dropdown">
                <%= link_to content_tag(:i, '', :class => 'icon-bell'), '#', :class => 'dropdown-toggle', :role => 'button', :'data-toggle' => "dropdown" %>
                <ul class="dropdown-menu notifications" role="menu">
                  <% @notifications.each do |notification| %>
                    <li>
                      <div class="thumbnail right-caption span4">
                        <%= event_action(notification.activity, :plaintext => true, :show_trackable => true) %>
                      </div>
                    </li>
                    <li class="divider"></li>
                  <% end %>
                </ul>
              </li>
            <% end %>
            <li class="dropdown">
              <%= link_to current_user.name, '#', :role => 'button', :class => "dropdown-toggle", :'data-toggle' => "dropdown" %>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'My Profile', current_user %></li>
                <li class="divider"></li>
                <li><%= link_to 'Manage Account', edit_user_registration_path %></li>
                <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          <% end %>
      	</ul>
        <!-- .nav, .navbar-search, .navbar-form, etc -->
      </div>
    </div>
  </div>
</div>
