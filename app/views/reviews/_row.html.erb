<li class="span4 review-box">
  <div class="review-rating">
    <div class="review-arrow"><%=link_to content_tag( :i, '', :class => "icon-arrow-up" ), plus_review_path(review), :class => "plus-rating" %></div>
    <div class="review-rating-value"><%= review.rating %></div>
    <div class="review-arrow"><%=link_to content_tag( :i, '', :class => "icon-arrow-down" ), minus_review_path(review), :class => "minus-rating" %></div>
  </div>
  <div class="thumbnail thumbnail-review">
    <div class="caption">
      <h4 class="review-author"><%= review.author.name %></h4>
      <div class="ellipsis">
        <div>
            <p class="review-body"><%= review.body %></p>
        </div>
      </div>
      <div class="review-bottom">
        <div class="review-time"><%= time_ago(review.created_at) %> </div>
        <div class="review-more muted">More</div>
      </div>
    </div>
  </div>
</li>