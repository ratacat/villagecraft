<div class="modal hide fade" id="modal-more-review" tabindex="-1" role="dialog" aria-labelledby="modalAddReview" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="modalMoreReviewAuthor"></h4>
        <span class="muted" id="modalMoreReviewTime"></span>
      </div>
      <div class="modal-body">
        <div class="review-elements">
            <%= content_tag :div,  simple_format(review.body) , :class => 'more-review-modal', :id => 'more-review-body'  %>						
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>

    </div>
  </div>
</div>
