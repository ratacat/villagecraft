<%= simple_form_for(@user, :defaults => { :input_html => { :class => 'input-xxlarge' } }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name_first, label: 'First Name' %>
    <%= f.input :name_last, label: 'Last Name' %>
    <%= f.input :city, label: 'City' %>
    <%= f.input :state, collection: Location.us_states_select_collection, label: 'State' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, :class => "btn-primary" %>
  </div>
<% end %>
<%= link_to "Change Password or Email", edit_user_registration_path %>
