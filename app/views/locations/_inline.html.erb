<% 
   blur = true unless defined? blur
   location ||= @location
   neighborhood = location.neighborhood
   link_to_map ||= false
%>

<% if blur %>
  <% if neighborhood %>
    <%= neighborhood.name %> Neighborhood
  <% else %>
    <%= location.city %>, <%= location.state_code %>
  <% end %>
<% else %>
  <%= location.address %> 
  <% if link_to_map %>
    (<%= link_to_google_maps(location, 'map') %>)
  <% end %>
<% end %>
