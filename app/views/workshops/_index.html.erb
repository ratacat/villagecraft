<%
  show_host ||= false
%>
<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th class="span6">Title</th>
      <% if show_host -%><th>Host</th><% end -%>
    </tr>
  </thead>

  <tbody>
<% @workshops.each do |workshop| %>
    <tr>
      <td><%= render :partial => 'thumbnail', :locals => {:workshop => workshop, :linked => true, :right_caption => true} %></td>
      <% if show_host -%><td><%= link_to workshop.host.name, workshop.host %></td><% end -%>
    </tr>
<% end %>
  </tbody>
</table>
