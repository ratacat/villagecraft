<div class="row">
  <%= iconic_link_to 'New Series', new_workshop_path, :icon => 'plus', :title => 'create a new workshop series (not a re-scheduling of one you have hosted before)', :confirm => "Are you sure that you want to create a completely new workshop series?", :class => 'btn btn-default pull-right', :id => 'new_workshop_btn' %>
</div>
<div>
  <% if @workshops.blank? %>
    No workshops.
  <% else %>
    <%# TODO: last rerun (if any) + all future reruns %>
    <%= render 'index', :workshops => @workshops %>
  <% end %>
</div>

<% ready_script do -%>
  $(document).on('click', 'a.show_all_reruns', function(e) {
    e.preventDefault();
    var workshop_uuid = $(this).closest('div.reruns').data("workshop-uuid");
    var _this = $(this);
    $.get("<%= events_path %>" + "?workshop_uuid=" + workshop_uuid, function( data ) {
      console.log(data);
      _this.closest('div.reruns').html( data );
    });
  });
  $('a.configure_workshop').on({
      mouseenter: function () {
          $(this).closest('h3').addClass('text-primary').removeClass('text-muted');
      },
      mouseleave: function () {
        $(this).closest('h3').removeClass('text-primary').addClass('text-muted');
      }
  });
  $(document).on('ajax:success', 'a.lock_toggle', function(event, data, status, xhr) {
    var new_button = $(data);
    new_button.addClass('btn-xs');
    $(this).replaceWith(new_button);
  });
  $(document).on('ajax:success', 'a.delete_rerun', function(event, data, status, xhr) {
    var rerun_row = $(this).closest(".row");
    rerun_row.remove();
  });  
  $(document).on('ajax:success', 'a.auto_add_rerun', function(event, data, status, xhr) {
    var reruns_div = $(this).prev();
    var new_row = $(data);
    reruns_div.append(new_row);
    new_row.highlight();
  });

<% end %>
