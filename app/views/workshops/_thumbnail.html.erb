<%
  workshop ||= @workshop
  linked ||= false
  thumb_size ||= :small
  span ||= "6"
  right_caption ||= false
%>
<ul class="thumbnails">
  <li class="span<%= span %>">
    <div class="thumbnail<%= " right-caption" if right_caption %>">
      <%= link_to_if linked, image_tag(workshop.img_src(thumb_size), :class => "img-rounded"), workshop %>
    </div>
    <div class="caption <%= thumb_size %><%= " right-caption" if right_caption %>">
      <span><%= link_to_if linked, workshop.title, workshop %></span>
    </div>
  </li>
</ul>
