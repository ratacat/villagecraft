<div class="row">
  <div class="col-sm-6">
    <div class="panel panel-default">
      <div class="panel-heading">
        <% if params[:reset] %>
          <h3 class="panel-title">Forgot your password?</h3>
        <% else %>
          <h3 class="panel-title">Set your password</h3>
        <% end %>
      </div>
      <div class="panel-body">
        <div class="col-sm-12">
          <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
            <%= devise_error_messages! %>
    
            <%= f.input :email, :autofocus => true %>

            <div class="form-group">
              <% if params[:reset] %>
                <%= f.submit "Send me reset password instructions", class: "btn btn-primary" %>
              <% else %>
                <%= f.submit "Send me a magic link to set my password", class: "btn btn-primary" %>
              <% end %>
              <%= render "devise/shared/links" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
