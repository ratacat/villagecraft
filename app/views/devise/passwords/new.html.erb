<p>
    <div class="well well-small span-3 simple_boxed_form">
    <legend>Forgot your password?</legend>
    <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
      <%= devise_error_messages! %>
    
      <%= f.input :email, :autofocus => true %>

      <div class="form-actions">
        <%= f.submit "Send me reset password instructions", class: "btn" %>
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</p>  
