<div id="register_modal" class="modal hide fade" tabindex="-1" data-backdrop="true" data-keyboard="true" role="dialog" aria-hidden="true" >
  <div class="modal-header">
    <h3 style="margin-left:10px;"><span class="event_title"></span></h3>
  </div>
  <div class="modal-body" id='collect_email_address'>
    <p>We won't spam or share your information.</p>
    <%= simple_form_for(:user, :as => :user, :url => registration_path(:user), html: { class: 'form-horizontal', id: 'attend_by_email_form'}) do |f| %>
      <%= f.input :email %>
      <div class="control-group">
        <div class="controls">
    	    <%= f.submit "Let's do it", :class => "btn btn-success" %>
        </div>
    	</div>
    <% end %>
  </div>
  <div class="modal-body initially_hidden" id='register_new_user'>
    <h4 style="margin-left: 30px;margin-bottom: 25px;">ooooh a newbie!  Welcome to Villagecraft =)</h4>

    <%= render :partial => 'devise/registrations/form', :locals => {:resource => User.new, :resource_name => :user} %>
  </div>
</div>
