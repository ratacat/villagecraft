<div class="row">
  <h2>Change Password</h2>
  <div class="span-4">
    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "form-horizontal" }) do |f| %>
    <%= f.error_notification %>

    <%# f.input :email %>
    <% if resource.has_set_password %>
    <%= f.input :current_password %>
    <% else %>
    <% flash[:alert] = "You have not yet set a password.  You should." %>
    <% end %>
    <%= f.input :password, label: "New Password", autocomplete: "off" %>

    <div class="form-actions"><%= f.submit "Change password", class: "btn btn-primary" %></div>
    <% end %>  
  </div>
</div>

<div class="row">
  <h2>Cancel Account</h2>
  <div class="span-4">
    <p>Unhappy? Sorry to see you go.</p> 
    <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>
  </div>
</div>

<% if current_user.admin? %>
<div class="row">
  <h2>Admin-only Area</h2>
  <div class="span-4">
    <%= render :partial => 'admin_mode_toggle_button' %>
  </div>
</div>
<% end %>

