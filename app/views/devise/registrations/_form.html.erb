<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-horizontal'}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :email %>
  <%= f.input :name, label: 'Name' %>
  <%= f.input :phone, label: 'Mobile Phone', :hint => 'to receive SMS notifications of last-minute changes' %>
  <%# f.input :city, label: 'City' %>
  <%# f.input :state, collection: Location.us_states_select_collection, label: 'State' %>
  <%# f.input :password, required: true %>

  <div class="form-group">
  	<%= f.submit "Let's do it", class: "btn btn-success" %>
  </div>
<% end %>  
