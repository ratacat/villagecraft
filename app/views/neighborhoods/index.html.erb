<div class="page-header">
  <%= link_to new_neighborhood_path, :class => 'btn btn-primary' do %>
    <i class="icon-plus icon-white"></i>
    New Neighborhood (from KML)
  <% end %>
  <h1>Neighborhoods</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>County</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% @neighborhoods.each do |neighborhood| %>
    <tr>
      <td><%= neighborhood.name %></td>
      <td><%= neighborhood.city %></td>
      <td><%= neighborhood.state %></td>
      <td><%= neighborhood.county %></td>
      <td>
        <span class="popover_map" data-content='<img src="<%= static_gmap_url(neighborhood) %>"/>' data-title="<%= neighborhood.name %>">
          <%= link_to neighborhood, class: 'icon_button', title: 'view' do -%>
            <i class="icon-play"></i> 
          <% end -%>
        </span>
        <%= link_to edit_neighborhood_path(neighborhood), class: 'icon_button', title: 'edit' do -%>
          <i class="icon-pencil"></i> 
        <% end -%>
        <%= link_to neighborhood, confirm: 'Are you sure?', method: :delete, class: 'icon_button', title: 'delete' do -%>
          <i class="icon-remove-circle"></i> 
        <% end %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
