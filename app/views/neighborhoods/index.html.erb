<div class="page-header">
  <%= link_to new_neighborhood_path, :class => 'btn btn-primary' do %>
    <i class="icon-plus icon-white"></i>
    New Neighborhood
  <% end %>
  <h1>Listing neighborhoods</h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>City</th>
      <th>State</th>
      <th>County</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
<% @neighborhoods.each do |neighborhood| %>
    <tr>
      <td><%= neighborhood.name %></td>
      <td><%= neighborhood.city %></td>
      <td><%= neighborhood.state %></td>
      <td><%= neighborhood.county %></td>
      <td><span class="popover_map" data-content='<img src="<%= static_gmap_url(neighborhood) %>"/>' data-title="<%= neighborhood.name %>"><%= link_to 'View', neighborhood %></span></td>
      <td><%= link_to 'Destroy', neighborhood, confirm: 'Are you sure?', method: :delete %></td>
    </tr>
<% end %>
  </tbody>
</table>


